<h1>Listing documents</h1>

<% @documents.each do |doc| %>
	<%= link_to doc.filename, doc.public_filename, :target => '_blank' %></ br>
<% end %>

<table>
  <tr>
    <th>Parent</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Size</th>
    <th>Attachable</th>
    <th>Attachable type</th>
    <th>Title</th>
  </tr>

<% for document in @documents %>
  <tr>
    <td><%=h document.parent_id %></td>
    <td><%=h document.content_type %></td>
    <td><%=h document.filename %></td>
    <td><%=h document.size %></td>
    <td><%=h document.attachable_id %></td>
    <td><%=h document.attachable_type %></td>
    <td><%=h document.title %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>
